            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.568"
            app:layout_constraintVertical_bias="0.437"/>
    <TextView
            android:text="@string/lbl_txt_crear_actor_apellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/txt_apellido_actor2"
            app:layout_constraintBottom_toTopOf="@+id/txt_apellido_actor2" android:layout_marginStart="8dp"/>

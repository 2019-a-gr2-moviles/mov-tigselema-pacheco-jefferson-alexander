    <TextView
            android:text="@string/lbl_txt_crear_actor_num_peliculas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="@+id/txt_num_peliculas_actor2"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/txt_num_peliculas_actor2"
    />
    <EditText
            android:layout_width="256dp"
            android:layout_height="43dp"

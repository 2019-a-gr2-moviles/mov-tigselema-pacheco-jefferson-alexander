            android:text="@string/lbl_btn_crear_hijo"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/btn_crear_pelicula" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/btn_actualizar_actor"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.028"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

            android:text="@string/lbl_txt_crear_actor_fn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" app:layout_constraintStart_toStartOf="@+id/txt_fn_actor2"
            app:layout_constraintBottom_toTopOf="@+id/txt_fn_actor2"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_crear_actor3"
            android:text="@string/txt_lbl_crear_actor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.058"/>
    <Switch
            android:text="@string/lbl_txt_crear_actor_retirado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_retirado_actor2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
